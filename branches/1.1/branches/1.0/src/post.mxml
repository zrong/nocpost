<?xml version="1.0" encoding="utf-8"?>
<mx:Application layout="vertical" creationComplete="init()" 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:text="flash.text.*"
	xmlns:st="student.*" 
	xmlns:nav="nav.*"
	xmlns:common='common.*'>
	<mx:HTTPService id="configRequest"
		method="post" 
		resultFormat="e4x" 
		useProxy="false"
		showBusyCursor="true"
		result="configResultHandler(event)"
		fault="configFaultHandler(event)"/>
	<mx:Form id="form" width="600" height="520" paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0">
		<mx:FormHeading label="第六届“全国中小学信息技术创新与实践活动学生作品申报表" width="100%" textAlign="center" fontSize="16"/>
		<mx:ViewStack id="vs" height="100%" width="100%" creationPolicy="all">
			<common:Copyright id="copyright" name="copyright" width="100%"/>
			<common:StepBasic id="step1" name="step1" label="第一步：基本信息" width="100%" height="100%" info="{configRequest.lastResult as XML}"/>
			<common:StepWorks id="step2" name='step2' label='第二步：参赛信息' width="100%" height="100%" info="{configRequest.lastResult as XML}"/>
			<common:StepUpload id="stepUpload" name="stepUpload" width="100%" height="100%" info="{configRequest.lastResult as XML}" label="&lt;font size='14' color='#ff0000'&gt;&lt;b&gt;第六步:上传文件（完成）&lt;/b&gt;"/>
		</mx:ViewStack>
		<nav:NavButton id="navBTN" vs="{vs}" width="100%"/>
	</mx:Form>
	<mx:Style source="style.css"/>
	<mx:Script source="post.as"/>
</mx:Application>
